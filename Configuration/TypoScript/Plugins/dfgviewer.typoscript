plugin.tx_dfgviewer_newspapercalendar < tt_content.list.20.dlf_calendar
plugin.tx_dfgviewer_newspapercalendar {
    switchableControllerActions {
        Calendar {
            1 = calendar
        }
    }
    settings {
        targetPid = {$config.kitodoPageView}
        showEmptyMonths = 1
        showEmptyTertialMonths = 0
    }
}

